;;; Input method for Croatian.
;;; Simulating Croatian Latin keyboard on American keyboard.
;;;
;;; @verbatim
;;; 1!  2"  3#  4$  5%  6&  7/  8(  9)  0=  '?  +*  ¸¨
;;;   qQ  wW  rR  eE  tT  zZ  uU  iI  oO  pP  šŠ  đĐ
;;;     aA  sS  dD  fF  gG  hH  jJ  kK  lL  čČ  ćĆ  žŽ
;;;       yY  xX  cC  vV  bB  nN  mM  ,;  .:  -_
;;; @endverbatim

(title "HR")

(map
 (map
		("@" ?\")
		("^" ?&)
		("&" ?/)
		("*" ?\()
		("\(" ?\))
		("\)" ?=)
  ("-" ?')	("_" ??)
  ("=" ?+)	("+" ?*)
  ("`" ?¸)	("~" ?¨)

  ("y" ?z)	("Y" ?Z)
  ("[" ?š)	("{" ?Š)
  ("]" ?đ)	("}" ?Đ)

  (";" ?č)	(":" ?Č)
  ("'" ?ć)	("\"" ?Ć)
  ("\\" ?ž)	("|" ?Ž)

  ("z" ?y)	("Z" ?Y)
		("<" ?;)
		(">" ?:)
  ("/" ?-)	("?" ?_)

  ("`c" ?ç)	("`C" ?Ç)
  ("`s" ?ş)	("`S" ?Ş)
  ("~a" ?ä)	("~A" ?Ä)
  ("~e" ?ë)	("~E" ?Ë)
  ("~o" ?ö)	("~O" ?Ö)
  ("~u" ?ü)	("~U" ?Ü)
  ))

(state
 (init
  (map)))

