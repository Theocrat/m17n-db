  ("O" (delete @-) "ో")
  ("o" (delete @-) "ొ")
  ("au" (delete @-) "ౌ")
  ("RRI" (delete @-) "ౄ")
  ("R^I" (delete @-) "ౄ")
  ("LLI" (delete @-) "")
  ("L^I" (delete @-) ""))

 (return
  ((Return)))

 (backspace
  ((BackSpace) (undo))))

(state
 (init
  (starter (pushback 1) (shift intermediate)))

 (intermediate
  (consonant (shift second))
  (independent (shift finish))
  (backspace)
  (return (shift init)))

 (second
  (consonant)
  (dependent (shift finish))
  (backspace)
  (return (shift init)))

 (finish
  (return)
  (t (shift init))))

