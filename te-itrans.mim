  ((C-@) "‍"))

 (dependent
  ("a" (delete @-) "")
  ("aa" (delete @-) "ా")
  ("A" (delete @-) "ా")
  ("i" (delete @-) "ి")
  ("ii" (delete @-) "ీ")
  ("I" (delete @-) "ీ")
  ("u" (delete @-) "ు")
  ("uu" (delete @-) "ూ")
